<project name="project" default="mkjar">
	<description>
            description
    </description>

	<property name="basename" value="clione-sql" />
	<property name="version" value="0.3.1" />
	<property name="src" location="./src" />
	<property name="classes" location="./classes" />
	<property name="lib" location="./lib" />

	<target name="mkjar">
		<mkdir dir="${classes}" />
		<antcall target="jar" />
		<delete dir="${classes}" />
	</target>

	<target name="jar" depends="compile">
		<jar basedir="${classes}" jarfile="${basename}-${version}.jar" />
	</target>

	<target name="compile">
		<javac srcdir="${src}" destdir="${classes}">
			<classpath>
				<fileset dir="${lib}">
					<include name="*.jar" />
				</fileset>
			</classpath>
		</javac>
	</target>

</project>
